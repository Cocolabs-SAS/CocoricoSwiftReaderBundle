{% trans_default_domain 'cocorico_swift_reader' %}
{% spaceless %}
    {% if messages|length %}
        <table class="table table-condensed table-striped">
            <thead>
            <tr>
                <th width="200">{{ 'Date'|trans }}</th>
                <th>{{ 'Subject'|trans }}</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for message in messages %}
                <tr>
                    <th scope="row">{{ message.date }}</th>
                    <td>{{ message.subject }}</td>
                    <td class="text-right">
                        <div class="btn-group">
                            <button class="btn btn-xs btn-primary" data-action="show"
                                    data-filename="{{ message.filename }}">
                                <i class="fa fa-fw fa-eye"></i>
                                <span>{{ 'Show'|trans }}</span>
                            </button>
                            <button class="btn btn-xs btn-warning" data-action="delete"
                                    data-filename="{{ message.filename }}">
                                <i class="fa fa-fw fa-trash"></i>
                                <span>{{ 'Delete'|trans }}</span>
                            </button>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <div class="alert alert-info text-center">
            <i class="fa fa-fw fa-info-circle"></i>
            <strong>{{ 'No message'|trans }}</strong>
        </div>
    {% endif %}
{% endspaceless %}